
@{
    ViewBag.Title = "Experience";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script>
    $(document).on('click', '#input_experience_button_id', function () {
        if ($('#input_title_id').val().length <= 1) {
            toastr.error("İş Pozisyonu Bölümü Boş Bırakılmamalı..", "Eksik Bilgi")
        }
        if ($('#input_company_id').val().length <= 1) {
            toastr.error("Firma Adı Bölümü Boş Bırakılmamalı..", "Eksik Bilgi")
        }
        if ($('#input_duration_id').val().length <= 1) {
            toastr.error("Çalışma Süresi Bölümü Boş Bırakılmamalı..", "Eksik Bilgi")
        }
        else {
        }
    });
    $(document).on('click', '#input_experience_delete_id', function () {
        $('#input_experience_delete_id').attr('ExpID', $(this).attr('value'));
        var Service_id = $('#input_experience_delete_id').attr('ExpID');

        alert(Service_id);
    })






</script>
@using (Html.BeginForm("Experience", "Admin", FormMethod.Post, new { id = "FormExperience" }))
{
    <div class="panel" style="text-align:center">
        <div class="panel-body">
            <h2>Tecrübelerim</h2>
            <br /> <br /> <br />
            <div class="col-md-4">
                <span class="ExpSpan">Pozisyon</span>
                <input type="text" class="form-control İnputBorder" name="input_title_name" id="input_title_id" /><br />
                <span class="ExpSpan">Şirket Adı</span>
                <input type="text" class="form-control İnputBorder" name="input_company_name" id="input_company_id" /><br />
                <span class="ExpSpan">Çalışma Süresi</span>
                <input type="text" class="form-control İnputBorder" name="input_duration_name" id="input_duration_id" /><br />
            </div>

            <div class="col-md-8">
                <span style="font-weight:bold;font-size:18px">Tecrübe Detayı</span>
                <textarea class="form-control İnputBorder"  name="input_experienceDetail_name" id="input_experienceDetail_id" rows="5"></textarea><br />
            </div>
            <input type="submit" class="btn btn-success" value="Yayınla" id="input_experience_button_id" />
        </div>
    </div>

}



<div class="panel" style="text-align:center">
    <div class="panel-body">
        <h2>Tecrübelerim Tablosu</h2>
        <br /> <br /> <br />
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Pozisyon</th>
                    <th>Şirket Adı</th>
                    <th>Tarih</th>
                    <th>Detay</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{ List<MyPortfolio.Models.tbl_Experiences> _Experiences = MyPortfolio.Data.Data.get_experience();}
                @foreach (var Experiences in _Experiences)
                {
                    <tr>
                        <td>@Experiences.Experience_id</td>
                        <td>@Experiences.Title</td>
                        <td>@Experiences.Company</td>
                        <td>@Experiences.Duration</td>
                        <td>@Experiences.ExperienceDetail</td>
                        <td> <i class="fa fa-trash" style="color:red" title="Sil" id="input_experience_delete_id" ExpID="" value="@Experiences.Experience_id"></i></td>
                        <td><i class="fa fa-save" style="color:darkorange" title="Güncelle" value="@Experiences.Experience_id"></i></td>
                        <td><i class=" fa fa-pencil" style="color:cornflowerblue" title="Detaya Git" value="@Experiences.Experience_id"></i></td>

                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>